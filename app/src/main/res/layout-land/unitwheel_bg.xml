<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <shape android:shape="rectangle">

            <gradient
                    android:angle="90"
                    android:centerColor="#787777"
                    android:endColor="#000000"
                    android:startColor="#000000"/>

            <stroke
                    android:width="1dp"
                    android:color="#FF000000"/>
        </shape>
    </item>

    <item
            android:bottom="0dp"
            android:left="4dp"
            android:right="4dp"
            android:top="0dp">

        <shape android:shape="rectangle">

            <gradient
                    android:angle="90"
                    android:centerColor="#3d3d3d"
                    android:endColor="#0a0a0a"
                    android:startColor="#0a0a0a"/>
        </shape>
    </item>

</layer-list>